<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.qianfeng.baidunuomi.widget.CircleImageView1
            android:id="@+id/recommend_item_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recommend_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="大人推"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recommend_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="测试一下内容"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/recommend_item_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="2.5"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_arrows_red_right"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="更多"
            android:textSize="14sp"
            android:textColor="@color/red" />
    </LinearLayout>

    <ImageView
        android:id="@+id/recommend_item_img"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY" />
</LinearLayout>

