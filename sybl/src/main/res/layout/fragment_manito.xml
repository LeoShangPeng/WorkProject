<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="com.qianfeng.mgp.fragment.ManitoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.qianfeng.mgp.widget.AutoScrollViewPager
            android:id="@+id/manito_viewpager"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <com.qianfeng.mgp.widget.ListViewForScrollView
            android:id="@+id/manito_listview"
            style="@style/Widget_ListView"
            android:layout_margin="8dp" />
    </LinearLayout>

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>
