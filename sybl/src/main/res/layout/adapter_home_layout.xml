<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home_item_iocn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="10dp"
        android:layout_gravity="center"
        android:contentDescription="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试title"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:rating="3.5"
            android:numStars="5"
            style="?android:attr/ratingBarStyleSmall"
            android:stepSize="0.5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_item_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大小"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/home_item_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载次数"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.0"
        android:orientation="vertical">

        <Button
            android:id="@+id/home_item_down"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_download_normal"
            android:focusable="false" />

        <TextView
            android:id="@+id/home_item_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:textSize="@dimen/app_context_size"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="+100" />
    </LinearLayout>


</LinearLayout>